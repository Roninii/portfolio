---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="grid grid-rows-[auto_1fr_auto] min-h-svh bg-gray-100 dark:bg-rosePine-base transition-colors duration-300 ease-out text-gray-800 dark:text-gray-100"
  >
    <Header />
    <main class="my-12">
      <slot />
    </main>
    <Footer />
  </body>
</html>
